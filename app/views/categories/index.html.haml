%h2 Categories List
= link_to "Create Category", new_category_path
%ul
  - @categories.each do |category|
    %li
      = link_to category.name, "javascript:;", class: "show-details"
      = link_to 'edit', edit_category_path(category)
      = " | "
      = link_to 'delete', category_path(category), method: :delete
      .description.hide= category.description